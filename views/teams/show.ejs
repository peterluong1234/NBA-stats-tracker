<%- include('../partials/header') %>
    <div class="fs-2 fw-bold"><%= team.full_name%></div>
    <div class="fs-4 fw-light"><%= team.conference%></div>
    <div class="fs-4 fw-light "><%= team.division%></div>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>W/L</th>
                <th>Opponent</th>
                <th>Score</th>
                <th>Opp. Score</th>
            </tr>
        </thead>
    <tbody>
        <% for(let i = 0; i < 5; i++) { %>
            <% let date = new Date(games[i].date).toDateString() %>
            <tr>
            <td><%= date %></td>
            <!-- if (games[i].home_team.id == team.id) {
                if (games[i].home_team_)
            } -->
            <% if (games[i].home_team.id == team.id) { if (games[i].home_team_score > games[i].visitor_team_score) { %>
                    <td>Win</td>
                    <td><%= games[i].visitor_team.full_name%></td>
                    <td><%= games[i].home_team_score%></td>
                    <td><%= games[i].visitor_team_score%></td>
                <% } else if (games[i].home_team_score < games[i].visitor_team_score){ %> <td>Loss</td> <td><%= games[i].visitor_team.full_name%></td><td><%= games[i].home_team_score%></td>
                    <td><%= games[i].visitor_team_score%></td><% } %>
                <% } else { if (games[i].visitor_team_score > games[i].home_team_score) { %> <td>Win</td><td><%= games[i].home_team.full_name%></td><td><%= games[i].visitor_team_score%></td>
                    <td><%= games[i].home_team_score%></td>
                    <% } else if (games[i].visitor_team_score < games[i].home_team_score){ %> <td>Loss</td><td><%= games[i].home_team.full_name%></td><td><%= games[i].visitor_team_score%></td>
                        <td><%= games[i].home_team_score%></td> <% } %>
                <% }  %> 
            </tr>
        <% } %>
                </tbody>
    </table>
