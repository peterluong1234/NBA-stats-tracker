<%- include('../partials/header') %>

        <div class="header">
            <table>
                <div><h3><%= title %></h3></div>
                <thead>
                    <tr>
                        <td>Name:</td>
                        <td>Team:</td>
                        <td>Pos:</td>
                        <td></td>
                    </tr>
                </thead
                    <% foundPlayers.forEach(function(p) { %>
                <tbody>
                    <tr>
                        <td><a href="/players/<%= p.id %>"><%= `${p.firstName} ${p.lastName}`%></a></td>
                        <td><%= `${p.city} ${p.team}`%></td>
                        <td><%= p.position %></td>
                        <td><form action="/players/<%= p.id %>?_method=DELETE" method="POST">
                            <button>X</button>
                        </form></td>
                    </tr>
                </tbody>
            <% }) %>
            </table>

            
